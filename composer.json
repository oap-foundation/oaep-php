{
    "name": "oap-foundation/oaep-php",
    "description": "Open Agent Exchange Protocol (OAEP) v0.1 - PHP Implementation",
    "type": "library",
    "license": "CC-BY-SA-4.0",
    "keywords": ["oap", "oaep", "decentralized-identity", "did", "verifiable-credentials", "agent-protocol"],
    "authors": [
        {
            "name": "OAP Foundation",
            "email": "foundation@openagentprotocol.org"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-sodium": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "guzzlehttp/guzzle": "^7.0",
        "firebase/php-jwt": "^6.0",
        "bitwasp/bitcoin": "^1.0",
        "web-token/jwt-core": "^3.0",
        "web-token/jwt-signature": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "OAP\\OAEP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OAP\\OAEP\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src --level=8",
        "cs-check": "phpcs src",
        "cs-fix": "phpcbf src"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
